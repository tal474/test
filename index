<!DOCTYPE html>
<html>
<head>
    <title>Test1 Table Viewer</title>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
</head>
<body>
    <h2>Test1 table data</h2>
    <div id="error" style="color: red;"></div>
    <table border="1" id="data-table">
        <thead>
            <tr>
                <th>created_at</th>
                <th>name</th>
            </tr>
        </thead>
        <tbody>
            <tr><td colspan="2">Loading...</td></tr>
        </tbody>
    </table>

    <script>
        const supabaseUrl = 'https://supabase.iamdoingmybest.xyz';
        const supabaseAnonKey = 'eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJpc3MiOiJzdXBhYmFzZSIsImlhdCI6MTc1MjU1ODA2MCwiZXhwIjo0OTA4MjMxNjYwLCJyb2xlIjoiYW5vbiJ9.r0LdGpfeYrHd37xc9j3i2boMuZhAkbhwkmDaJzAUEog';  // âœ… replace with real anon public key

        const supabase = supabase.createClient(supabaseUrl, supabaseAnonKey);

        async function loadData() {
            console.log('Fetching data...');
            const { data, error } = await supabase
                .from('test1')
                .select('created_at, name')
                .order('created_at', { ascending: false });

            console.log('Data:', data);
            console.log('Error:', error);

            const tableBody = document.querySelector('#data-table tbody');
            const errorDiv = document.getElementById('error');
            tableBody.innerHTML = '';
            errorDiv.textContent = '';

            if (error) {
                console.error('Error fetching data:', error);
                errorDiv.textContent = 'Error fetching data: ' + error.message;
                tableBody.innerHTML = '<tr><td colspan="2">Failed to load data</td></tr>';
                return;
            }

            if (!data || data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="2">No data available</td></tr>';
                return;
            }

            data.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `<td>${row.created_at}</td><td>${row.name}</td>`;
                tableBody.appendChild(tr);
            });
        }

        loadData();
    </script>
</body>
</html>
